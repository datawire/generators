root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

; YAML ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

; Misc ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[{Makefile,*.mk}]
; Makefiles require tabs to work properly and do not work with spaces
indent_style = tab

[*.md]
indent_style = space

